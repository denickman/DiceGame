  print(a + b);
}

add(5);     // b = null
add(5, 10); // b = 10


–ú–æ–∂–Ω–æ –∑–∞–¥–∞—Ç—å –¥–µ—Ñ–æ–ª—Ç–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ:
void add(a, [b = 5]) {
  print(a + b);
}

add(10);     // b=5
add(10, 6);  // b=6



–°–¥–µ–ª–∞—Ç—å –∏–º–µ–Ω–æ–≤–∞–Ω–Ω—ã–π –ø–∞—Ä–∞–º–µ—Ç—Ä –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–º
–ü–æ —É–º–æ–ª—á–∞–Ω–∏—é –æ–Ω–∏ –Ω–µ–æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ, –Ω–æ –º–æ–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å required:
